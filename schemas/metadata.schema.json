{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metadata.schema.json",
  "title": "Hotlines Metadata Schema",
  "description": "Schema for validating metadata structure including regions, provinces, cities, and categories",
  "type": "object",
  "required": ["metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["regions", "categories"],
      "properties": {
        "regions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "provinces"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Region name (e.g., 'Region X - Northern Mindanao')"
              },
              "provinces": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["province", "cities"],
                  "properties": {
                    "province": {
                      "type": "string",
                      "description": "Province name"
                    },
                    "cities": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string",
                        "minLength": 2
                      },
                      "description": "List of cities/municipalities in this province"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "categories": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "police_hotlines",
              "fire_hotlines",
              "medical_hotlines",
              "utility_hotlines",
              "government_hotlines"
            ]
          },
          "uniqueItems": true,
          "description": "Available hotline categories"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
