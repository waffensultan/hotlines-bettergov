{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "hotlines.schema.json",
  "title": "Emergency Hotlines Schema",
  "description": "Schema for validating emergency hotline data",
  "type": "object",
  "required": ["hotlines"],
  "properties": {
    "hotlines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "hotlineName",
          "hotlineNumber",
          "regionName",
          "province",
          "city",
          "category",
          "alternateNumbers"
        ],
        "properties": {
          "hotlineName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 200,
            "description": "Name of the hotline service"
          },
          "hotlineNumber": {
            "type": "string",
            "pattern": "^[0-9-]+$",
            "minLength": 3,
            "description": "Primary hotline number. Can contain digits and dashes. Do NOT include country code (+63) or plus symbol."
          },
          "regionName": {
            "type": "string",
            "minLength": 3,
            "description": "Full region name (e.g., 'Region X - Northern Mindanao')"
          },
          "province": {
            "type": "string",
            "minLength": 2,
            "description": "Province name"
          },
          "city": {
            "type": "string",
            "minLength": 2,
            "description": "City or municipality name"
          },
          "category": {
            "type": "string",
            "enum": [
              "police_hotlines",
              "fire_hotlines",
              "medical_hotlines",
              "utility_hotlines",
              "government_hotlines"
            ],
            "description": "Type of emergency hotline"
          },
          "alternateNumbers": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9-]+$",
              "minLength": 3
            },
            "description": "Array of alternate contact numbers (can be empty). Each can contain digits and dashes."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
